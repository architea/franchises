<script>
  const dataNav = document.querySelector("div[data-nav]")

  //Open the menu when the hamburger is clicked
  dataNav.addEventListener("click", () => {
    document.body.classList.toggle("openNav")
  })
  //Close when click outside nav
  const outsideNav = document.querySelector("#nav")
  document.addEventListener("click", (event) => {
    if (event.target.contains(outsideNav)) {
      if (document.body.classList.contains("openNav")) {
        document.body.classList.remove("openNav")
      }
    }
  })
  //Close on Esc keyboard input
  document.addEventListener("keyup", (event) => {
    if (event.key === "Escape" && document.body.classList.contains("openNav")) {
      document.body.classList.remove("openNav")
    }
  })

  //Add a black background when scroll
  const callback = (entries, observer) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        document.body.classList.remove("fix")
      } else {
        document.body.classList.add("fix")
      }
    })
  }
  const observer = new IntersectionObserver(callback)
  const targetEl = document.querySelector("[data-scroll-target]")
  observer.observe(targetEl)
</script>
